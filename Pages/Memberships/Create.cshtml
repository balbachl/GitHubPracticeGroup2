@page
@model GitHubPractice.Pages.Memberships.CreateModel

        @{
        ViewData["Title"] = "Create";
        }

<style>
    body {
        background-color: darkslategrey;
        text-align: center;
        padding-top: 50px;
    }

    form {
        display: inline-block; 
        background-color: darkgray; 
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .form-control {
        margin-bottom: 15px;
        width: 250px;
    }

    .btn-primary {
        width: 100%;
        color: white;
    }

    a {
        display: inline-block;
        margin-top: 20px;
        color: black;
    }
</style>

    <h1>Create Membership</h1>
        
    <h4>Membership</h4>
    <hr />
    <div>
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Membership.Name" class="control-label"></label>
                <input asp-for="Membership.Name" class="form-control" />
                <span asp-validation-for="Membership.Name" class="text-danger"></span>
            </div>
        <div class="form-group">
            <label asp-for="Membership.Email" class="control-label"></label>
            <input asp-for="Membership.Email" class="form-control" />
            <span asp-validation-for="Membership.Email" class="text-danger"></span>
        </div>
            <div class="form-group">
                <label asp-for="Membership.JoinDate" class="control-label"></label>
                <input asp-for="Membership.JoinDate" class="form-control" />
                <span asp-validation-for="Membership.JoinDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Membership.IsActive" /> @Html.DisplayNameFor(model => model.Membership.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
